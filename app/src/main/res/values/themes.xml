<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Green_Theme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/secondaryGreen</item>
        <item name="colorPrimaryVariant">@color/secondaryGreen</item>
        <item name="colorOnPrimary">@color/darkGreen</item>
        <item name="colorSecondary">@color/secondaryGreen</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkGreen</item>
        <item name="colorOnSecondary">@color/lightGreen</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/lightGreen</item>
        <item name="editTextStyle">@style/EditTextTest</item>
        <item name="android:textViewStyle">@style/TextViewCustom</item>
    </style>


    <style name="EditTextTest" parent="android:style/Widget.EditText">
        <item name="android:background">@color/lightGreen</item>
        <item name="android:textColor">@color/secondaryDarkGreen</item>
        <item name="android:padding">@dimen/editTextPadding</item>
        <item name="android:textSize">@dimen/fontSizeSmaller</item>
        <item name="android:layout_width">@dimen/editTextWidth</item>
        <item name="android:layout_height">@dimen/editTextHeight</item>
    </style>

    <style name="ButtonCustom" parent="android:style/Widget.Button">
        <item name="android:textColor">@color/darkGreen</item>
        <item name="android:background">@color/secondaryGreen</item>
    </style>

    <style name="TextViewCustom" parent="android:style/Widget.TextView">
        <item name="android:background">@color/darkGreen</item>
        <item name="android:textColor">@color/secondaryGreen</item>
        <item name="android:textSize">@dimen/fontSizeLarge</item>
        <item name="android:layout_width">@dimen/textViewWidth</item>
        <item name="android:layout_height">@dimen/textViewHeight</item>
    </style>
</resources>